<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.app.meaz.meaz.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:titleTextColor="@android:color/white"
        android:background="#FFFFFF">
        <RelativeLayout android:id="@+id/toolbar_logo"
            android:layout_width="140dp" android:layout_height="wrap_content"
            android:background="@drawable/meazinclogo"
            android:layout_gravity="left|center_vertical"
            android:clickable="true">
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <EditText
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#999999"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/search_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:src="@drawable/search_icon"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/scanner_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:src="@drawable/barcode_icon"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Product Selected"
            android:id="@+id/product_title" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/img_holder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="Front Name"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:text="Front Part #"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="N/A"
                android:textStyle="bold"
                android:id="@+id/front_name" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:text="N/A"
                android:textStyle="bold"
                android:id="@+id/front_part_number" />

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#333333"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Back Name"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#333333"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="Back Part #"
            android:textStyle="bold" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:text="N/A"
                android:textStyle="bold"
                android:id="@+id/back_name" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:text="N/A"
                android:textStyle="bold"
                android:id="@+id/back_part_number" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="Thread Color"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:text="Sizes"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/thread_color">

                <TextView
                    android:id="@+id/thread_color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:text="N/A"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/main_image"
                    android:layout_width="100dp"
                    android:layout_height="10dp"
                    android:background="#6f74a7"
                    android:layout_gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/size_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:layout_weight="0.69"
                    android:layout_margin="2dp"
                    android:padding="@dimen/size_text_padding"
                    android:textSize="10sp"
                    android:text="N/A"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/size_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:layout_weight="0.69"
                    android:layout_margin="2dp"
                    android:padding="@dimen/size_text_padding"
                    android:textSize="10sp"
                    android:text="N/A"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/size_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:layout_weight="0.69"
                    android:layout_margin="2dp"
                    android:padding="@dimen/size_text_padding"
                    android:textSize="10sp"
                    android:text="N/A"
                    android:textStyle="bold"/>



            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity= "center_horizontal|center_vertical"
        android:visibility="invisible"/>

</LinearLayout>

</LinearLayout>
